{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "noEmit": false,
    "declaration": true,
    "paths": {
      "@/types": ["types/index"],
      "@/shared": ["shared/index"],
      "@/telnet": ["telnet/index"],
      "@/constants": ["constants/index"],
      "@/utils": ["utils/index"],
      "@/types/*": ["types/*"],
      "@/shared/*": ["shared/*"],
      "@/telnet/*": ["telnet/*"],
      "@/constants/*": ["constants/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "exclude": ["vite.config.ts", "dist", "node_modules"],
  "includes": ["src/**/*.ts"]
}
