{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@stratamu/types": ["../../types/index"],
      "@/*": ["src/*"]
    }
  }
}
