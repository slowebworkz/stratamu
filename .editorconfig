# EditorConfig is awesome: https://EditorConfig.org
# This file helps maintain consistent coding styles for all editors and IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

[*.{sh,zsh,bash}]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{d.ts}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
